#Imports
import chess
import os

#Initial board output
BOARD = chess.Board()
print(BOARD)

#loop while the player isn't in checkmate
while not BOARD.is_checkmate():
  
  ##entered moves and clears console
  entermove = input("Move: ")
  os.system('clear')
  
  ##plays move on the board
  Move = chess.Move.from_uci(entermove)
  BOARD.push(Move) 

  ## Output the board with the move played
  print(BOARD)
