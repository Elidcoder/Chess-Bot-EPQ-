#Imports
import chess
import os

# Make board
BOARD = chess.Board()
print(BOARD)

# Loop while game is being played
while not BOARD.is_checkmate():
  
  # Find all legal moves 
  Legal = list(BOARD.generate_legal_moves())

  # Tricky oneliner to take in a move and try it until it is valid
  while(move := chess.Move.from_uci(Inputtedmove := input("Move: ").lower())) not in Legal:
    print("please enter a legal move")

  # Clear screen
  os.system('clear')
  
  # Enters move
  BOARD.push(move) 
  print(BOARD)

  # Pause until an enter to move on
  y = input()
